				<munit-tools:with-attributes>
					<munit-tools:with-attribute whereValue="Invoke orderline process layer" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:error typeId="CONNECTIVITY" />
				</munit-tools:then-return>
			
</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution>
			<set-payload value='#[MunitTools::getResourceAsString("request/orderline-update-success-request.json")]' doc:name="Set Payload" doc:id="ea5e832e-ec56-4e4b-9750-b5bae08e6ba6" />
			<flow-ref doc:name="Flow Reference" doc:id="385d0893-05b6-4c2a-8f5a-e35a4e8db0ac" name="put:\erpOrderLines\(erpOrderId)\(erpOrderLineId):application\json:x-orderline-api-config"/>
		

</munit:execution>
