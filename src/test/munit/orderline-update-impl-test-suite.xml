	<munit:config name="orderline-update-impl-test-suite.xml" />
	<munit:test name="orderline-update-impl-test-suite-put-orderline-update-impl-sub-flowTest" description="Test" doc:id="aa9c60e4-9c5e-49d6-8abb-c173e2189156" >
		<munit:behavior >
			<munit-tools:mock-when doc:name="Mock when" doc:id="a1ecce04-ec3e-4ed1-a3f7-fa4d0214bc0e" processor="http:request">
				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Invoke orderline process layer" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value='#[MunitTools::getResourceAsString("response/orderline-update-success-response.json")]' mediaType="application/json" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<set-payload value='#[MunitTools::getResourceAsString("request/orderline-update-success-request.json")]' doc:name="Set Payload" doc:id="2f96ae38-9870-482b-a4db-4ca3ac7402bb" />
			<flow-ref doc:name="Flow-ref to put-orderline-update-impl-sub-flow" doc:id="8f28f602-0b13-4ef3-9184-574749aa720b" name="put:\erpOrderLines\(erpOrderId)\(erpOrderLineId):application\json:x-orderline-api-config"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert equals" doc:id="c3f93d37-fe88-4b0b-afd5-29c0f5185ed1" actual="#[payload.responseText]" expected="#['success']"/>
		</munit:validation>
	</munit:test>
	
